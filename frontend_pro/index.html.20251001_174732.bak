<!doctype html>
<html lang="es" data-bs-theme="dark">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CIDESA · Clientes (MVP Visual)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 24px;
    }

    .card {
      border-radius: 16px;
    }

    .spinner {
      display: none;
    }

    .table thead th {
      position: sticky;
      top: 0;
      background: #1e1e1e;
    }
  </style>
</head>

<body>
  <div class="container">
    <header class="mb-4 d-flex align-items-center justify-content-between">
      <h1 class="h3 m-0">CIDESA · Módulo Clientes</h1>
      <div>
        <a class="btn btn-outline-secondary btn-sm" href="http://127.0.0.1:8000/docs" target="_blank">API Docs</a>
        <a class="btn btn-outline-secondary btn-sm" href="http://127.0.0.1:8000/api/health" target="_blank">Health</a>
      </div>
    </header>

    <div class="row g-4">
      <!-- Formulario -->
      <div class="col-lg-4">
        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title mb-3">Alta de Cliente</h5>
            <form id="formCliente" novalidate>
              <div class="mb-2">
                <label class="form-label">RFC</label>
                <input class="form-control" id="rfc" placeholder="XAXX010101000" required minlength="10" maxlength="13">
                <div class="invalid-feedback">RFC requerido (10–13 caracteres).</div>
              </div>
              <div class="mb-2">
                <label class="form-label">Razón Social</label>
                <input class="form-control" id="razon" placeholder="Razón Social" required minlength="2">
                <div class="invalid-feedback">Razón social requerida.</div>
              </div>
              <div class="mb-2">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" id="email" placeholder="correo@dominio.mx">
                <div class="invalid-feedback">Email inválido.</div>
              </div>
              <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <input class="form-control" id="tel" placeholder="2291234567">
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="activo" checked>
                <label class="form-check-label" for="activo">Activo</label>
              </div>
              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="button" id="btnLimpiar" class="btn btn-outline-secondary">Limpiar</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Tabla -->
      <div class="col-lg-8">
        <div class="card shadow">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
              <h5 class="card-title m-0">Clientes</h5>
              <div class="input-group" style="max-width: 340px;">
                <span class="input-group-text">Buscar</span>
                <input id="q" class="form-control" placeholder="RFC o Razón Social">
                <button id="btnBuscar" class="btn btn-outline-primary">Ir</button>
              </div>
            </div>
            <div id="loader" class="spinner-border spinner" role="status"><span
                class="visually-hidden">Cargando...</span></div>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>RFC</th>
                    <th>Razón Social</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody id="tbody"></tbody>
              </table>
            </div>
            <div class="d-flex justify-content-end gap-2">
              <button id="btnRefrescar" class="btn btn-outline-secondary btn-sm">Refrescar</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Edición -->
    <div class="modal fade" id="modalEdit" tabindex="-1">
      <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Editar Cliente</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="formEdit" novalidate>
              <input type="hidden" id="edit_id">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">RFC</label>
                  <input class="form-control" id="edit_rfc" required minlength="10" maxlength="13">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Razón Social</label>
                  <input class="form-control" id="edit_razon" required minlength="2">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" id="edit_email">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Teléfono</label>
                  <input class="form-control" id="edit_tel">
                </div>
                <div class="col-12">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="edit_activo">
                    <label class="form-check-label" for="edit_activo">Activo</label>
                  </div>
                </div>
              </div>
            </form>
            <hr>
            <h6>Documentos</h6>
            <div class="d-flex gap-2 mb-2">
              <input class="form-control" type="file" id="fileInput" />
              <button class="btn btn-primary" id="btnSubir">Subir</button>
            </div>
            <ul class="list-group" id="listaDocs"></ul>
          </div>
          <div class="modal-footer">
            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button class="btn btn-primary" id="btnGuardarEdit">Guardar Cambios</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Toast -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
      <div id="toast" class="toast text-bg-dark border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div id="toastBody" class="toast-body">Mensaje</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="./main.js"></script>
</body>

</html>